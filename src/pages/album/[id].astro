---
  import Layout from "../../layouts/Layout.astro";
  import CardSong from "../../components/cards/CardSong.astro";
  import {ButtonPlayList} from "../../components/buttons/ButtonPlayList";
  import type { Album } from "../../interfaces/album";
  import NavBar from "../../components/ui/NavBar.astro";

  const {id} = Astro.params;

  const res = await fetch(
  `http://localhost:4321/api/album/${id}`, {
    method: "GET",
    headers: {
      'Content-Type': 'application/json'
    }
  });

  const album: Album = await res.json();
---

<Layout title="Spotify">
  <NavBar/>
  <div class={`bg-gradient-to-b from-[rgb(118,57,50)] to-[rgb(18,18,18)] flex flex-col pt-11`}>
    <div class="flex gap-4 p-4">
      <picture>
        <img src={album.cover} transition:name={`album-image-${id}`} class="w-[200px] lg:w-[300px]"/>
      </picture>
      <div class="flex flex-col gap-2 lg:gap-4 self-end">
        <span class="font-circular-light text-sm">Album</span>
        <h2 class="text-white text-3xl md:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-circular-bold" transition:name={`albun-name-${id}`}>{album.name}</h2>
        <h3 class="font-circular-medium" transition:name={`artist-name-${id}`}>{album.artist.name}</h3>
      </div>
    </div>
    
    <div class="bg-neutral-900/40 w-full flex flex-col pb-5">
      <div class="w-[95%] py-5 self-center">
        <div class="flex gap-5 items-center">
          <ButtonPlayList songs={album!.song} albumId={parseInt(id!)} client:only="react"/>
          <svg 
            fill="currentColor"
            role="img" aria-hidden="true" 
            viewBox="0 0 24 24" 
            class="w-[35px] h-[35px] text-neutral-400"
          >
            <path d="M5.21 1.57a6.757 6.757 0 0 1 6.708 1.545.124.124 0 0 0 .165 0 6.741 6.741 0 0 1 5.715-1.78l.004.001a6.802 6.802 0 0 1 5.571 5.376v.003a6.689 6.689 0 0 1-1.49 5.655l-7.954 9.48a2.518 2.518 0 0 1-3.857 0L2.12 12.37A6.683 6.683 0 0 1 .627 6.714 6.757 6.757 0 0 1 5.21 1.57zm3.12 1.803a4.757 4.757 0 0 0-5.74 3.725l-.001.002a4.684 4.684 0 0 0 1.049 3.969l.009.01 7.958 9.485a.518.518 0 0 0 .79 0l7.968-9.495a4.688 4.688 0 0 0 1.049-3.965 4.803 4.803 0 0 0-3.931-3.794 4.74 4.74 0 0 0-4.023 1.256l-.008.008a2.123 2.123 0 0 1-2.9 0l-.007-.007a4.757 4.757 0 0 0-2.214-1.194z"></path>
          </svg>
          <svg 
            fill="currentColor"
            role="img" aria-hidden="true" 
            viewBox="0 0 24 24" 
            class="w-[35px] h-[35px] text-neutral-400"
          >
            <path d="M4.5 13.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3zm15 0a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3zm-7.5 0a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"></path>
          </svg>
        </div>
      </div>
      <div class="flex w-[95%] self-center justify-between px-9 mt-4">
        <div class="flex gap-5">
          <span class="text-neutral-400 font-circular-medium">#</span>
          <span class="text-neutral-400 font-circular-medium">Title</span>
        </div>
        <svg 
          fill="currentColor"
          role="img" aria-hidden="true" 
          viewBox="0 0 16 16" 
          class="w-[20px] h-[20px] text-neutral-400"
        >
          <path d="M8 1.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"></path>
          <path d="M8 3.25a.75.75 0 0 1 .75.75v3.25H11a.75.75 0 0 1 0 1.5H7.25V4A.75.75 0 0 1 8 3.25z"></path>
        </svg>
      </div>
      <div class="border-b border-b-neutral-600 self-center w-[95%] mb-5 mt-2"></div>
      <ul class="flex flex-col items-center gap-3">
        {
          album?.song.map((song, index) => {
            return (
              <CardSong name={song.name} index={index + 1} artist={album.artist.name} song={song} albumId={parseInt(id!)}/>
            )
          })
        }
      </ul>
    </div>
  </div>
</Layout>

<style>
  .conta {
    background: rgb(118,57,50);
    background: linear-gradient(180deg, rgba(118,57,50,1) 0%, rgba(18,18,18,1) 100%);
  }
</style>
