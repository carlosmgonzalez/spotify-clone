---
import type { Artist } from "../../interfaces/album";

interface Props {
  artist: Artist
};

const {artist} = Astro.props;
---

<div class="hover:bg-neutral-800/50 rounded-lg p-2 flex justify-start items-center gap-3">
  <picture>
    <img src={artist.img} alt="artist image" class="rounded-full w-12 h-12"/>
  </picture>
  <div class="flex flex-col">
    <p class="font-circular-medium text-white text-lg">{artist.name}</p>
    <p class="font-circular-light text-neutral-600 text-sm">Artist</p>
  </div>
</div>