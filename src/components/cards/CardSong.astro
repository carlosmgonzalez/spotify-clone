---
  import {ButtonPlaySong} from "../buttons/ButtonPlaySong";
  import type {Song} from '../../interfaces/album'

  interface Props {
    name: string;
    artist: string;
    index: number;
    albumId: number;
    song: Song;
  };

  const {name, artist, index, song, albumId} = Astro.props;
---

<li class="hover:bg-neutral-600/50 w-[95%] px-7 py-2 rounded-md card-song">
  <div class="flex items-center gap-5">
    <div class="w-5 flex items-center justify-center">
      <span class="font-circular-light">{index}</span>
      <ButtonPlaySong song={song} albumId={albumId} client:only="react"/>
    </div>
    <div class="flex flex-col">
      <p class="font-circular-light text-white text-lg">{name}</p>
      <p class="font-circular-medium text-neutral-500 text-sm">{artist}</p>
    </div>
  </div>
</li>

<style>
  :hover span {
    display: none;
  }
</style>