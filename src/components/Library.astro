---
import type { Artist } from "../interfaces/album";
import CardArtist from "./cards/CardArtist.astro";
const res = await fetch(`/api/artist`, {
  method: "GET",
  headers: { "Content-Type": "application/json" },
});

const artists: Artist[] = await res.json();
---

<section class="bg-[#121212] rounded-md pt-5 mt-3">
  <div class="flex justify-between items-center w-full px-5">
    <div class="flex gap-6">
      <svg
        fill="currentColor"
        role="img"
        aria-hidden="true"
        viewBox="0 0 24 24"
        class="w-7 h-7 text-neutral-400"
        ><path
          d="M3 22a1 1 0 0 1-1-1V3a1 1 0 0 1 2 0v18a1 1 0 0 1-1 1zM15.5 2.134A1 1 0 0 0 14 3v18a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V6.464a1 1 0 0 0-.5-.866l-6-3.464zM9 2a1 1 0 0 0-1 1v18a1 1 0 1 0 2 0V3a1 1 0 0 0-1-1z"
        ></path>
      </svg>
      <h1 class="font-circular-bold text-lg pt-1 text-neutral-400">
        Your Library
      </h1>
    </div>
    <div>
      <svg
        fill="currentColor"
        role="img"
        aria-hidden="true"
        viewBox="0 0 16 16"
        class="w-5 h-5 text-neutral-400"
        ><path
          d="M15.25 8a.75.75 0 0 1-.75.75H8.75v5.75a.75.75 0 0 1-1.5 0V8.75H1.5a.75.75 0 0 1 0-1.5h5.75V1.5a.75.75 0 0 1 1.5 0v5.75h5.75a.75.75 0 0 1 .75.75z"
        ></path></svg
      >
    </div>
  </div>
  <div class="flex flex-col gap-2 mt-5 px-3">
    {artists.map((artist) => <CardArtist artist={artist} />)}
  </div>
</section>
